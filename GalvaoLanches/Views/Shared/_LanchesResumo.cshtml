@model Lanche


<div class="col-sm-6 col-md-4 col-lg-3 mb-4">
    <div class="card h-100 shadow-sm border-0">
        <img src="@Model.ImagemUrl" class="card-img-top img-fluid rounded-top" alt="@Model.Nome">
        <div class="card-body d-flex flex-column">
            <h5 class="card-title">@Model.Nome</h5>
            <p class="card-text text-muted mb-2">@Model.DescricaoCurta</p>
            <div class="mt-auto">
                <span class="fw-bold text-primary">@Model.Preco.ToString("c")</span>
            </div>
        </div>
    </div>
</div>