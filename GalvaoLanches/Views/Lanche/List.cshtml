@model IEnumerable<GalvaoLanches.Models.Lanche>

<div class="container my-5">
    <h2 class="text-center mb-4">@ViewData["Titulo"]</h2>

    <div class="row">
        @foreach (var lanche in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@lanche.ImagemUrl" class="card-img-top img-fluid rounded-top" alt="@lanche.Nome">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@lanche.Nome</h5>
                        <p class="card-text text-muted mb-2">@lanche.DescricaoCurta</p>
                        <div class="mt-auto">
                            <span class="fw-bold text-primary">@lanche.Preco.ToString("c")</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
